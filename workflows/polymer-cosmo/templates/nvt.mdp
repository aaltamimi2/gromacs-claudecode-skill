; nvt.mdp - NVT equilibration for polymer-solvent systems
; 10 ns NVT equilibration

integrator  = md
dt          = 0.002         ; 2 fs timestep
nsteps      = 5000000       ; 10 ns (5,000,000 steps * 2 fs)

; Output control
nstxout-compressed  = 5000  ; Save frame every 10 ps
nstlog              = 5000  ; Log every 10 ps
nstenergy           = 5000  ; Energy every 10 ps

; Bond constraints
continuation    = no
constraint_algorithm = LINCS
constraints     = h-bonds
lincs_iter      = 1
lincs_order     = 4

; Neighbor searching
cutoff-scheme   = Verlet
nstlist         = 20
rlist           = 1.2
pbc             = xyz

; Electrostatics
coulombtype     = PME
rcoulomb        = 1.2
pme_order       = 4
fourierspacing  = 0.12

; Van der Waals
vdwtype         = Cut-off
vdw-modifier    = Force-switch
rvdw_switch     = 1.0
rvdw            = 1.2
DispCorr        = EnerPres

; Temperature coupling
tcoupl      = V-rescale
tc_grps     = System
tau_t       = 1.0
ref_t       = 300

; No pressure coupling in NVT
pcoupl      = no

; Velocity generation
gen_vel     = yes
gen_temp    = 300
gen_seed    = -1
